	else \
		echo -e "  MyPy: â—‹ Using defaults"; \
	fi

quality-deps-install: ## âœ… Install additional quality dependencies
	@$(ECHO_CMD) "$(BLUE)Installing additional quality dependencies...$(NC)\n"
	@$(ECHO_CMD) "$(YELLOW)Installing optional quality tools...$(NC)\n"

# ============================================================================
# CODE QUALITY, LINTING, AND VALIDATION
# ============================================================================
# This module handles code quality checks, linting, formatting, and validation
# with comprehensive cross-platform support
#
# Dependencies: Makefile.platform, Makefile.env, Makefile.install
# ============================================================================

# Quality configuration
QUALITY_CONFIG_DIR := .

# Quality tool configuration files
BLACK_CONFIG := pyproject.toml
PYLINT_CONFIG := .pylintrc
MYPY_CONFIG := pyproject.toml
RUFF_CONFIG := pyproject.toml

# ============================================================================
# COMPREHENSIVE QUALITY SUITE
# ============================================================================

.PHONY: quality quality-fix quality-check quality-report

quality: _load_env ## âœ… Execute all code quality checks
	@$(ECHO_CMD) "$(BLUE)Running comprehensive code quality suite...$(NC)\n"
	@$(ECHO_CMD) "$(YELLOW)â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”$(NC)\n"
	@$(MAKE) _check_quality_deps
	@$(ECHO_CMD) "$(CYAN)STEP 1: Code Formatting Check$(NC)\n"
	@$(MAKE) black-check
	@$(ECHO_CMD) "$(CYAN)STEP 2: Import Sorting Check$(NC)\n"
	@$(MAKE) isort-check 2>/dev/null || echo -e "$(YELLOW)âš  isort not available$(NC)"
	@$(ECHO_CMD) "$(CYAN)STEP 3: Linting Analysis$(NC)\n"
	@$(MAKE) pylint
	@$(ECHO_CMD) "$(CYAN)STEP 4: Type Checking$(NC)\n"
	@$(MAKE) mypy
	@$(ECHO_CMD) "$(CYAN)STEP 5: Security Scanning$(NC)\n"
	@$(MAKE) security-scan
	@$(ECHO_CMD) "$(YELLOW)â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”$(NC)\n"
	@$(ECHO_CMD) "$(GREEN)âœ“ Code quality suite completed$(NC)\n"

quality-fix: _load_env ## âœ… Auto-fix code quality issues where possible
	@$(ECHO_CMD) "$(BLUE)Auto-fixing code quality issues...$(NC)\n"
	@$(MAKE) _check_quality_deps
	@$(ECHO_CMD) "$(YELLOW)Running Black formatter...$(NC)\n"
	@$(MAKE) black
	@$(ECHO_CMD) "$(YELLOW)Running import sorting...$(NC)\n"
	@$(MAKE) isort 2>/dev/null || echo -e "$(YELLOW)âš  isort not available$(NC)"
	@$(ECHO_CMD) "$(YELLOW)Running Ruff auto-fixes...$(NC)\n"
	@$(MAKE) ruff-fix 2>/dev/null || echo -e "$(YELLOW)âš  ruff not available$(NC)"
	@$(ECHO_CMD) "$(GREEN)âœ“ Auto-fixes completed$(NC)\n"

quality-check: _load_env ## âœ… Validate code quality without making changes
	@$(ECHO_CMD) "$(BLUE)Checking code quality (no modifications)...$(NC)\n"
	@$(MAKE) _check_quality_deps
	@$(MAKE) black-check
	@$(MAKE) pylint
	@$(MAKE) mypy
	@$(ECHO_CMD) "$(GREEN)âœ“ Quality check completed$(NC)\n"

quality-report: _load_env ## âœ… Generate comprehensive quality report
	@$(ECHO_CMD) "$(BLUE)Generating code quality report...$(NC)\n"
	@$(MAKE) _check_quality_deps
	@$(ECHO_CMD) "$(YELLOW)Creating quality report...$(NC)\n"
	@echo "# Code Quality Report" > quality-report.md
	@echo "Generated on: $$(date)" >> quality-report.md
	@echo "" >> quality-report.md
	@echo "## Black Formatting Check" >> quality-report.md
	@$(MAKE) black-check >> quality-report.md 2>&1 || echo "Black check failed" >> quality-report.md
	@echo "" >> quality-report.md
	@echo "## Pylint Analysis" >> quality-report.md
	@$(MAKE) pylint >> quality-report.md 2>&1 || echo "Pylint analysis failed" >> quality-report.md
	@echo "" >> quality-report.md
	@echo "## MyPy Type Checking" >> quality-report.md
	@$(MAKE) mypy >> quality-report.md 2>&1 || echo "MyPy check failed" >> quality-report.md
	@$(ECHO_CMD) "$(GREEN)âœ“ Quality report generated: quality-report.md$(NC)\n"

# ============================================================================
# BLACK CODE FORMATTING
# ============================================================================

.PHONY: black black-check black-diff

black: _load_env ## âœ… Format code with Black
	@$(ECHO_CMD) "$(BLUE)Formatting code with Black...$(NC)\n"
	@$(MAKE) _check_black_deps
	@$(ECHO_CMD) "$(YELLOW)Running Black formatter on source code...$(NC)\n"
	@$(PYTHON) -m black $(SRC_DIR) $(TEST_DIR) --config=$(BLACK_CONFIG) 2>/dev/null || \
	$(PYTHON) -m black $(SRC_DIR) $(TEST_DIR)
	@$(ECHO_CMD) "$(GREEN)âœ“ Code formatting completed$(NC)\n"

black-check: _load_env ## âœ… Validate Black formatting without changes
	@$(ECHO_CMD) "$(CYAN)Checking Black formatting...$(NC)\n"
	@$(MAKE) _check_black_deps
	@$(PYTHON) -m black --check $(SRC_DIR) $(TEST_DIR) --config=$(BLACK_CONFIG) 2>/dev/null || \
	$(PYTHON) -m black --check $(SRC_DIR) $(TEST_DIR) && \
	echo -e "$(GREEN)âœ“ Black formatting check passed$(NC)" || \
	(echo -e "$(RED)âŒ Black formatting issues found$(NC)" && \
	 echo -e "$(CYAN)Fix with: make black$(NC)" && exit 1)

black-diff: _load_env ## âœ… Display Black formatting differences
	@$(ECHO_CMD) "$(CYAN)Showing Black formatting differences...$(NC)\n"
	@$(MAKE) _check_black_deps
	@$(PYTHON) -m black --diff $(SRC_DIR) $(TEST_DIR) --config=$(BLACK_CONFIG) 2>/dev/null || \
	$(PYTHON) -m black --diff $(SRC_DIR) $(TEST_DIR)

# ============================================================================
# PYLINT STATIC ANALYSIS
# ============================================================================

.PHONY: pylint pylint-report pylint-config

pylint: _load_env ## âœ… Execute Pylint static analysis
	@$(ECHO_CMD) "$(CYAN)Running Pylint static analysis...$(NC)\n"
	@$(MAKE) _check_pylint_deps
	@if [ -f $(PYLINT_CONFIG) ]; then \
		echo -e "$(YELLOW)Using Pylint configuration: $(PYLINT_CONFIG)$(NC)"; \
		$(PYTHON) -m pylint $(SRC_DIR) --rcfile=$(PYLINT_CONFIG); \
	else \
		echo -e "$(YELLOW)Using default Pylint configuration$(NC)"; \
		$(PYTHON) -m pylint $(SRC_DIR); \
	fi && \
	echo -e "$(GREEN)âœ“ Pylint analysis completed$(NC)" || \
	(echo -e "$(RED)âŒ Pylint issues found$(NC)" && exit 1)

pylint-report: _load_env ## âœ… Generate detailed Pylint report
	@$(ECHO_CMD) "$(BLUE)Generating detailed Pylint report...$(NC)\n"
	@$(MAKE) _check_pylint_deps
	@if [ -f $(PYLINT_CONFIG) ]; then \
		$(PYTHON) -m pylint $(SRC_DIR) --rcfile=$(PYLINT_CONFIG) --output-format=text > pylint-report.txt 2>&1; \
	else \
		$(PYTHON) -m pylint $(SRC_DIR) --output-format=text > pylint-report.txt 2>&1; \
	fi
	@$(ECHO_CMD) "$(GREEN)âœ“ Pylint report generated: pylint-report.txt$(NC)\n"

pylint-config: ## âœ… Display Pylint configuration
	@$(ECHO_CMD) "$(CYAN)Pylint Configuration:$(NC)\n"
	@if [ -f $(PYLINT_CONFIG) ]; then \
		echo -e "$(GREEN)âœ“ Configuration file: $(PYLINT_CONFIG)$(NC)"; \
		echo -e "$(YELLOW)Key settings:$(NC)"; \
		grep -E "^[a-z-]+" $(PYLINT_CONFIG) | head -10; \
	else \
		echo -e "$(YELLOW)âš  No custom configuration file found$(NC)"; \
		echo -e "$(CYAN)Using default Pylint settings$(NC)"; \
	fi

# ============================================================================
# MYPY TYPE CHECKING
# ============================================================================

.PHONY: mypy mypy-report mypy-config

mypy: _load_env ## âœ… Execute MyPy type checking
	@$(ECHO_CMD) "$(CYAN)Running MyPy type checking...$(NC)\n"
	@$(MAKE) _check_mypy_deps
	@if [ -f $(MYPY_CONFIG) ]; then \
		echo -e "$(YELLOW)Using MyPy configuration: $(MYPY_CONFIG)$(NC)"; \
		$(PYTHON) -m mypy $(SRC_DIR) --config-file=$(MYPY_CONFIG); \
	else \
		echo -e "$(YELLOW)Using default MyPy configuration$(NC)"; \
		$(PYTHON) -m mypy $(SRC_DIR); \
	fi && \
	echo -e "$(GREEN)âœ“ MyPy type checking completed$(NC)" || \
	(echo -e "$(RED)âŒ MyPy type issues found$(NC)" && exit 1)

mypy-report: _load_env ## âœ… Generate MyPy report
	@$(ECHO_CMD) "$(BLUE)Generating MyPy type checking report...$(NC)\n"
	@$(MAKE) _check_mypy_deps
	@if [ -f $(MYPY_CONFIG) ]; then \
		$(PYTHON) -m mypy $(SRC_DIR) --config-file=$(MYPY_CONFIG) > mypy-report.txt 2>&1; \
	else \
		$(PYTHON) -m mypy $(SRC_DIR) > mypy-report.txt 2>&1; \
	fi
	@$(ECHO_CMD) "$(GREEN)âœ“ MyPy report generated: mypy-report.txt$(NC)\n"

mypy-config: ## âœ… Display MyPy configuration
	@$(ECHO_CMD) "$(CYAN)MyPy Configuration:$(NC)\n"
	@if [ -f $(MYPY_CONFIG) ] && grep -q "\[tool.mypy\]" $(MYPY_CONFIG); then \
		echo -e "$(GREEN)âœ“ Configuration found in: $(MYPY_CONFIG)$(NC)"; \
		echo -e "$(YELLOW)MyPy settings:$(NC)"; \
		sed -n '/\[tool.mypy\]/,/^\[/p' $(MYPY_CONFIG) | head -10; \
	else \
		echo -e "$(YELLOW)âš  No MyPy configuration found$(NC)"; \
		echo -e "$(CYAN)Using default MyPy settings$(NC)"; \
	fi

# ============================================================================
# RUFF LINTING AND FORMATTING
# ============================================================================

.PHONY: ruff ruff-check ruff-fix

ruff: _load_env ## âœ… Execute Ruff linting
	@$(ECHO_CMD) "$(CYAN)Running Ruff linting...$(NC)\n"
	@$(MAKE) _check_ruff_deps
	@$(PYTHON) -m ruff check $(SRC_DIR) $(TEST_DIR) && \
	echo -e "$(GREEN)âœ“ Ruff linting completed$(NC)" || \
	(echo -e "$(RED)âŒ Ruff issues found$(NC)" && \
	 echo -e "$(CYAN)Fix with: make ruff-fix$(NC)" && exit 1)

ruff-check: _load_env ## âœ… Validate with Ruff without fixing
	@$(ECHO_CMD) "$(CYAN)Checking code with Ruff...$(NC)\n"
	@$(MAKE) _check_ruff_deps
	@$(PYTHON) -m ruff check $(SRC_DIR) $(TEST_DIR) --no-fix

ruff-fix: _load_env ## âœ… Auto-fix Ruff issues
	@$(ECHO_CMD) "$(BLUE)Auto-fixing Ruff issues...$(NC)\n"
	@$(MAKE) _check_ruff_deps
	@$(PYTHON) -m ruff check $(SRC_DIR) $(TEST_DIR) --fix
	@$(ECHO_CMD) "$(GREEN)âœ“ Ruff auto-fixes completed$(NC)\n"

# ============================================================================
# IMPORT SORTING
# ============================================================================

.PHONY: isort isort-check isort-diff

isort: _load_env ## âœ… Sort imports with isort
	@$(ECHO_CMD) "$(BLUE)Sorting imports with isort...$(NC)\n"
	@$(MAKE) _check_isort_deps
	@$(PYTHON) -m isort $(SRC_DIR) $(TEST_DIR) --profile black
	@$(ECHO_CMD) "$(GREEN)âœ“ Import sorting completed$(NC)\n"

isort-check: _load_env ## âœ… Validate import sorting without changes
	@$(ECHO_CMD) "$(CYAN)Checking import sorting...$(NC)\n"
	@$(MAKE) _check_isort_deps
	@$(PYTHON) -m isort $(SRC_DIR) $(TEST_DIR) --profile black --check-only && \
	echo -e "$(GREEN)âœ“ Import sorting check passed$(NC)" || \
	(echo -e "$(RED)âŒ Import sorting issues found$(NC)" && \
	 echo -e "$(CYAN)Fix with: make isort$(NC)" && exit 1)

isort-diff: _load_env ## âœ… Display import sorting differences
	@$(ECHO_CMD) "$(CYAN)Showing import sorting differences...$(NC)\n"
	@$(MAKE) _check_isort_deps
	@$(PYTHON) -m isort $(SRC_DIR) $(TEST_DIR) --profile black --diff

# ============================================================================
# SECURITY SCANNING
# ============================================================================

.PHONY: security-scan security-bandit security-safety

security-scan: _load_env ## âš™ï¸ Execute comprehensive security scanning
	@$(ECHO_CMD) "$(BLUE)Running security vulnerability scanning...$(NC)\n"
	@$(ECHO_CMD) "$(YELLOW)Running Bandit security scanner...$(NC)\n"
	@$(MAKE) security-bandit
	@$(ECHO_CMD) "$(YELLOW)Running Safety dependency scanner...$(NC)\n"
	@$(MAKE) security-safety
	@$(ECHO_CMD) "$(GREEN)âœ“ Security scanning completed$(NC)\n"

security-bandit: _load_env ## âš™ï¸ Execute Bandit security scanner
	@$(ECHO_CMD) "$(CYAN)Running Bandit security analysis...$(NC)\n"
	@if $(PYTHON) -c "import bandit" 2>/dev/null; then \
		$(PYTHON) -m bandit -r $(SRC_DIR) -f json -o bandit-report.json 2>/dev/null || \
		$(PYTHON) -m bandit -r $(SRC_DIR); \
		echo -e "$(GREEN)âœ“ Bandit security scan completed$(NC)"; \
	else \
		echo -e "$(YELLOW)âš  Bandit not available. Install with: pip install bandit$(NC)"; \
		echo -e "$(CYAN)Run 'make install-test' to get all development tools$(NC)"; \
	fi

security-safety: _load_env ## âš™ï¸ Execute Safety dependency vulnerability scanner
	@$(ECHO_CMD) "$(CYAN)Running Safety dependency scan...$(NC)\n"
	@if $(PYTHON) -c "import safety" 2>/dev/null; then \
		$(PYTHON) -m safety check --json --output safety-report.json 2>/dev/null || \
		$(PYTHON) -m safety check; \
		echo -e "$(GREEN)âœ“ Safety dependency scan completed$(NC)"; \
	else \
		echo -e "$(YELLOW)âš  Safety not available. Install with: pip install safety$(NC)"; \
		echo -e "$(CYAN)Run 'make install-test' to get all development tools$(NC)"; \
	fi

# ============================================================================
# PRE-COMMIT HOOKS
# ============================================================================

.PHONY: pre-commit pre-commit-install pre-commit-run

pre-commit: _load_env ## âš™ï¸ Execute pre-commit hooks on all files
	@$(ECHO_CMD) "$(CYAN)Running pre-commit hooks...$(NC)\n"
	@if $(PYTHON) -c "import pre_commit" 2>/dev/null; then \
		$(PYTHON) -m pre_commit run --all-files; \
		echo -e "$(GREEN)âœ“ Pre-commit hooks completed$(NC)"; \
	else \
		echo -e "$(YELLOW)âš  pre-commit not available$(NC)"; \
		echo -e "$(CYAN)Running individual quality tools instead...$(NC)"; \
		$(MAKE) quality-fix; \
	fi

pre-commit-install: _load_env ## ğŸ“¦ Install pre-commit hooks
	@$(ECHO_CMD) "$(BLUE)Installing pre-commit hooks...$(NC)\n"
	@if $(PYTHON) -c "import pre_commit" 2>/dev/null; then \
		$(PYTHON) -m pre_commit install; \
		echo -e "$(GREEN)âœ“ Pre-commit hooks installed$(NC)"; \
	else \
		echo -e "$(YELLOW)âš  pre-commit not available. Install with: pip install pre-commit$(NC)"; \
		echo -e "$(CYAN)Run 'make install-test' to get all development tools$(NC)"; \
	fi

pre-commit-run: _load_env ## âš™ï¸ Execute pre-commit hooks on staged files
	@$(ECHO_CMD) "$(CYAN)Running pre-commit on staged files...$(NC)\n"
	@if $(PYTHON) -c "import pre_commit" 2>/dev/null; then \
		$(PYTHON) -m pre_commit run; \
	else \
		echo -e "$(YELLOW)âš  pre-commit not available, running quality checks...$(NC)"; \
		$(MAKE) quality-check; \
	fi; \
	echo -e "$(GREEN)âœ“ Pre-commit workflow completed$(NC)"

# ============================================================================

# ============================================================================
# QUALITY CLEANUP AND MAINTENANCE
# ============================================================================

.PHONY: quality-clean quality-clean-reports quality-clean-cache

quality-clean: ## âœ… Clean quality tool artifacts and reports
	@$(ECHO_CMD) "$(YELLOW)Cleaning quality artifacts...$(NC)\n"
	@$(MAKE) quality-clean-reports
	@$(MAKE) quality-clean-cache
	@$(ECHO_CMD) "$(GREEN)âœ“ Quality cleanup completed$(NC)\n"

quality-clean-reports: ## âœ… Clean quality reports
	@$(ECHO_CMD) "$(YELLOW)Cleaning quality reports...$(NC)\n"
	@rm -f quality-report.md
	@rm -f pylint-report.txt
	@rm -f mypy-report.txt
	@rm -f bandit-report.json
	@rm -f safety-report.json
	@$(ECHO_CMD) "$(GREEN)âœ“ Quality reports cleaned$(NC)\n"

quality-clean-cache: ## âœ… Clean quality tool cache
	@$(ECHO_CMD) "$(YELLOW)Cleaning quality tool cache...$(NC)\n"
	@rm -rf .mypy_cache
	@rm -rf .ruff_cache
	@find . -name "*.pyc" -delete 2>/dev/null || true
	@find . -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
	@$(ECHO_CMD) "$(GREEN)âœ“ Quality cache cleaned$(NC)\n"


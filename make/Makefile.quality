.PHONY: pre-commit pre-commit-install pre-commit-run

pre-commit: _load_env ## âš™ï¸ Execute pre-commit hooks on all files
	@printf "\\033[0;36mRunning pre-commit hooks...\\033[0m\\n"
	@if $(PYTHON) -c "import pre_commit" 2>/dev/null; then \
		$(PYTHON) -m pre_commit run --all-files; \
		printf "\033[0;32mâœ“ Pre-commit hooks completed\033[0m\n"; \
	else \
		printf "\033[0;33mâš  pre-commit not available\033[0m\n"; \
		printf "\033[0;36mRunning individual quality tools instead...\033[0m\n"; \
		$(MAKE) quality-fix; \
	fi

pre-commit-install: _load_env ## ğŸ“¦ Install pre-commit hooks
	@printf "\\033[0;34mInstalling pre-commit hooks...\\033[0m\\n"
	@if $(PYTHON) -c "import pre_commit" 2>/dev/null; then \
		$(PYTHON) -m pre_commit install; \
		printf "\033[0;32mâœ“ Pre-commit hooks installed\033[0m\n"; \
	else \
		printf "\033[0;33mâš  pre-commit not available. Install with: pip install pre-commit\033[0m\n"; \
		printf "\033[0;36mRun 'make install-test' to get all development tools\033[0m\n"; \
	fi

pre-commit-run: _load_env ## âš™ï¸ Execute pre-commit hooks on staged files
	@printf "\\033[0;36mRunning pre-commit on staged files...\\033[0m\\n"
	@if $(PYTHON) -c "import pre_commit" 2>/dev/null; then \
		$(PYTHON) -m pre_commit run; \
	else \
		printf "\033[0;33mâš  pre-commit not available, running quality checks...\033[0m\n"; \

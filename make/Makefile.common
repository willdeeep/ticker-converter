# Parallel execution wrapper for independent operations
define parallel_operation
	@echo -e "$(BLUE)Running parallel operation: $(1)$(NC)"
	@$(1) & \
	$(2) & \
	$(3) & \
	wait
	@echo -e "$(SUCCESS_COLOR)âœ“ Parallel operation completed$(NC)"
endef

# Conditional execution based on file changes
define conditional_execution
	@if [ $(1) -nt $(2) ] || [ ! -f $(2) ]; then \
		echo -e "$(BLUE)$(3) ($(1) changed)$(NC)"; \
		$(4); \
		touch $(2); \
	else \
		echo -e "$(INFO_COLOR)â€¢ $(3) (up to date)$(NC)"; \
	fi
endef


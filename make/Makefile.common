# Standard cleanup operation pattern
define cleanup_pattern
	@echo -e "$(BLUE)Cleaning $(1)...$(NC)"
	@if [ -d "$(2)" ]; then \
		echo -e "$(YELLOW)Removing: $(2)$(NC)"; \
		rm -rf "$(2)"; \
		echo -e "$(SUCCESS_COLOR)âœ“ Cleaned: $(2)$(NC)"; \
	else \
		echo -e "$(INFO_COLOR)â€¢ Already clean: $(2)$(NC)"; \
	fi
endef

# Standard test execution pattern
define test_execution_pattern
	@echo -e "$(BLUE)Running $(1) tests...$(NC)"
	@$(call progress_indicator,Preparing test environment,5)
	@$(MAKE) _check_pytest_deps
	@pytest $(2) $(TEST_DIR) $(PYTEST_ARGS) || { \
		echo -e "$(ERROR_COLOR)âœ— $(1) tests failed$(NC)"; \
		exit 1; \
	}
	@echo -e "$(SUCCESS_COLOR)âœ“ $(1) tests completed successfully$(NC)"
endef

# Standard quality check pattern
define quality_check_pattern
	@echo -e "$(BLUE)Running $(1) quality check...$(NC)"
	@$(call progress_indicator,Initializing $(1),3)
	@$(2) $(3) || { \
		echo -e "$(ERROR_COLOR)âœ— $(1) quality check failed$(NC)"; \
		exit 1; \
	}
	@echo -e "$(SUCCESS_COLOR)âœ“ $(1) quality check passed$(NC)"
endef


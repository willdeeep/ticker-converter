# Standardized pip operations (used in 8+ commands)
define pip_operation
	@echo -e "$(BLUE)Running pip operation: $(1)$(NC)"
	@if ! command -v pip >/dev/null 2>&1; then \
		echo -e "$(ERROR_COLOR)âœ— pip not found. Please install Python and pip first.$(NC)"; \
		exit 1; \
	fi
	@echo -e "$(YELLOW)Using pip: $$(which pip)$(NC)"
	@pip $(1) || { echo -e "$(ERROR_COLOR)âœ— Pip operation failed: $(1)$(NC)"; exit 1; }
	@echo -e "$(SUCCESS_COLOR)âœ“ Pip operation completed successfully$(NC)"
endef

# PostgreSQL database operations (used in 13+ commands)
define postgres_operation
	@echo -e "$(BLUE)Running PostgreSQL operation: $(1)$(NC)"
	@if ! command -v psql >/dev/null 2>&1; then \
		echo -e "$(ERROR_COLOR)âœ— PostgreSQL client (psql) not found.$(NC)"; \
		echo -e "$(YELLOW)Please install PostgreSQL or use: make install-postgres$(NC)"; \
		exit 1; \
	fi
	@echo -e "$(YELLOW)Using PostgreSQL: $$(psql --version | head -n1)$(NC)"
	@$(1) || { echo -e "$(ERROR_COLOR)âœ— PostgreSQL operation failed$(NC)"; exit 1; }
	@echo -e "$(SUCCESS_COLOR)âœ“ PostgreSQL operation completed successfully$(NC)"
endef

# Python file discovery with intelligent filtering (used in 9+ commands)
define find_python_files
	@echo -e "$(BLUE)Discovering Python files: $(1)$(NC)"
	@if [ -d "$(1)" ]; then \
		echo -e "$(YELLOW)Searching in: $(1)$(NC)"; \
		find "$(1)" -name "*.py" -type f \
			! -path "*/.*" \
			! -path "*/__pycache__/*" \
			! -path "*/venv/*" \
			! -path "*/.venv/*" \
			! -path "*/node_modules/*" \
			! -path "*/build/*" \
			! -path "*/dist/*" \
			2>/dev/null || true; \
	else \
		echo -e "$(WARNING_COLOR)âš  Directory not found: $(1)$(NC)"; \
	fi
endef

# Command validation with helpful error messages
define validate_command
	@echo -e "$(BLUE)Validating command: $(1)$(NC)"
	@if ! command -v $(1) >/dev/null 2>&1; then \
		echo -e "$(ERROR_COLOR)âœ— Command not found: $(1)$(NC)"; \
		$(if $(2),echo -e "$(YELLOW)Suggestion: $(2)$(NC)";) \
		exit 1; \
	fi
	@echo -e "$(SUCCESS_COLOR)âœ“ Command available: $(1) at $$(which $(1))$(NC)"
endef

# Progress indicator for long-running operations
define progress_indicator
	@echo -e "$(BLUE)$(1)...$(NC)"
	@printf "$(YELLOW)"
	@for i in $$(seq 1 $(2)); do printf "â–“"; sleep 0.1; done
	@echo -e "$(NC)"
	@echo -e "$(SUCCESS_COLOR)âœ“ $(1) completed$(NC)"
endef

